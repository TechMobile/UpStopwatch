<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/background_dark"
    tools:context=".MainStopwatchActivity" >
    <LinearLayout 
        android:id="@+id/watchstop_circle_button"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/watchstop_background"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
	    <TextView 
	        android:id="@+id/text_view_minutes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/init_minute"
	        android:layout_gravity="center"
	        android:gravity="center_vertical"
	        android:textColor="#fff"
	        android:textSize="80sp" />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/lbl_minutes"
	        android:layout_gravity="center"
	        android:gravity="center_vertical"
	        android:textColor="#fff"
	        android:textSize="20sp" />
	    <TextView 
	        android:id="@+id/text_view_seconds"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/init_second"
	        android:layout_gravity="center"
	        android:gravity="center_vertical"
	        android:textColor="#fff"
	        android:textSize="80sp" />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/lbl_seconds"
	        android:layout_gravity="center"
	        android:gravity="center_vertical"
	        android:textColor="#fff"
	        android:textSize="20sp" />
	    <TextView 
	        android:id="@+id/text_view_mili"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/init_miliseconds"
	        android:layout_gravity="center"
	        android:gravity="center_vertical"
	        android:textColor="#fff"
	        android:textSize="40sp" />
    </LinearLayout>
</LinearLayout>